<% layout("/layout/boilerplateCode.ejs") -%>

<section class="login-container">
  <div class="login-card">
    <h1>Login</h1>
    <p class="subtitle">Welcome back! Please log in to continue.</p>

    <form action="/blogify/posts" method="POST" class="login-form">
      <div class="form-group">
        <label for="email">Email Address</label>
        <input
          type="email"
          id="email"
          name="email"
          placeholder="Enter your email"
          required
        />
      </div>

      <div class="form-group">
        <label for="password">Password</label>
        <input
          type="password"
          id="password"
          name="password"
          placeholder="Enter your password"
          required
        />
      </div>

      <button type="submit" class="second-btn ">Login</button>
    </form>

    <div class="extra-links">
      <p><a href="/forgot-password">Forgot password?</a></p>
      <p>Donâ€™t have an account? <a href="/blogify/register">Register</a></p>
    </div>
  </div>
</section>
