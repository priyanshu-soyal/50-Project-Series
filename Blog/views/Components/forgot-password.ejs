<% layout("/layout/boilerplateCode.ejs") -%>

<section class="forgot-password-container">
  <div class="forgot-password-card">
    <h1>Forgot Password</h1>
    <p class="subtitle">Enter your email address to reset your password.</p>

    <form action="/blogify/forgot-password" method="POST" class="forgot-password-form">
      <div class="form-group">
        <label for="email">Email Address</label>
        <input
          type="email"
          id="email"
          name="email"
          placeholder="Enter your registered email"
          required
        />
      </div>

      <button type="submit" class="btn">Reset Password</button>
    </form>

    <div class="extra-links">
      <p>Remembered your password? <a href="/blogify/login">Back to login</a></p>
    </div>
  </div>
</section>